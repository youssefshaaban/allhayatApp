<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/back"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="70dp"
                    android:src="@drawable/ic_check"
                    android:layout_height="70dp"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/back_ground_circle_white"
                    app:tint="@color/colorPrimaryDark" />
               <TextView
                   android:fontFamily="@font/mypridero_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="@string/title_confirm_booking"
                    />
            </LinearLayout>

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7">
            <androidx.cardview.widget.CardView
                android:id="@+id/contentBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/white"
                android:elevation="@dimen/_5sdp"
                android:translationZ="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:contentPadding="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp">
                    <TextView
                        android:fontFamily="@font/mypridero_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textId"
                        android:text="ID : 32324324"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/colorPrimaryDark"
                            android:src="@drawable/profile"
                            android:layout_margin="@dimen/_5sdp"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="@font/mypridero_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:id="@+id/docName"
                                android:textSize="@dimen/_16sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Dr/yousef"
                                android:textColor="@color/colorPrimaryDark"
                                />
                            <TextView
                                android:fontFamily="@font/myriadpro_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:id="@+id/spec"
                                android:textSize="@dimen/_16sdp"
                                android:text="Genral"
                                android:textColor="@color/gray_light"
                                />
                            <TextView
                                android:fontFamily="@font/mypridero_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:id="@+id/price"
                                android:textSize="@dimen/_16sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="300 L.E"
                                android:textColor="@color/red"
                                />


                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/title_name"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_13sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="alex"
                            android:padding="@dimen/_5sdp"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:id="@+id/name"
                            android:textSize="@dimen/_13sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/title_date"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_13sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="05 jul 2020"
                            android:padding="@dimen/_5sdp"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:id="@+id/date"
                            android:textSize="@dimen/_13sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/title_time"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_13sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="02:10 PM"
                            android:padding="@dimen/_5sdp"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:id="@+id/time"
                            android:textSize="@dimen/_13sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_80sdp"
                android:background="@drawable/back_solid_color_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <Button
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/back_gradient_solid"
                android:text="@string/title_done"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</layout>