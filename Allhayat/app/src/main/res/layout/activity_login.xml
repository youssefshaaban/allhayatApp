<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        tools:context=".ui.login.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/logo"
                        />

                </LinearLayout>

                <TextView
                    android:fontFamily="@font/mypridero_semi"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/title_welcome_back"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/myriadpro_light"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/gray_light"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/title_login_your_account"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/back_solid_color_primary"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"

                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/back_solid_color_white_all_corners"

                        android:orientation="vertical"

                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_baseline_add_ic_call_24"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:fontFamily="@font/myriadpro_light"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_10sdp"
                                android:text="@string/title_mobile"
                                />
                        </LinearLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/etMobile"
                            android:inputType="phone"
                            android:background="@null"
                            android:padding="@dimen/_5sdp"
                            android:hint="@string/title_mobile"
                            android:paddingStart="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:background="#CCCCCC"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_height=".5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="24dp"
                                android:src="@drawable/ic_padlock"
                                android:layout_height="24dp"/>
                            <TextView
                                android:fontFamily="@font/myriadpro_light"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_10sdp"
                                android:text="@string/title_password"
                                />
                        </LinearLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/etPassword"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:inputType="textPassword"
                            android:padding="@dimen/_5sdp"
                            android:hint="*****"
                            android:paddingStart="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            />
                    </LinearLayout>
                    <TextView
                        android:fontFamily="@font/myriadpro_light"
                        android:layout_width="wrap_content"
                        android:id="@+id/login"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/title_login"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <TextView
                    android:fontFamily="@font/myriadpro_light"
                    android:layout_width="match_parent"
                    android:text="@string/title_dontHaveAccount"
                    android:gravity="bottom|center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_14sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/backgroundlogin"
                    android:layout_marginTop="-15dp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/view"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/back_login_carve"
                        android:layout_height="@dimen/_45sdp"/>
                    <Button
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/title_signup"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:translationZ="@dimen/_5sdp"
                        android:id="@+id/signUp"
                        android:fontFamily="@font/myriadpro_light"
                        android:background="@drawable/back_solid_color_white_all_corners"
                        app:layout_constraintTop_toTopOf="@id/view"
                        />

                    <TextView
                        android:fontFamily="@font/myriadpro_light"
                        android:layout_width="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signUp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/title_or_login"
                        android:textColor="@color/white"
                        android:id="@+id/orLogin"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/contentSocial"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@id/orLogin"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:src="@drawable/ic_google"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/google"
                            android:layout_height="70dp"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:src="@drawable/ic_facebook"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/face"
                            android:layout_height="70dp"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:src="@drawable/ic_twitter"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/twitter"
                            android:layout_height="70dp"/>

                    </LinearLayout>

                    <TextView
                        android:fontFamily="@font/myriadpro_light"
                        android:layout_width="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/white"

                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="@dimen/_15sdp"
                        android:text="@string/title_forget_pass"
                        android:layout_marginBottom="@dimen/_20sdp"
                        app:layout_constraintTop_toBottomOf="@id/contentSocial"
                        android:layout_height="wrap_content"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</layout>